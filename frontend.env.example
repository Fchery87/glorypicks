# GloryPicks Frontend Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ============================================================================
# API ENDPOINTS
# ============================================================================

# Backend API URL (required for data fetching)
# Use localhost for development, your actual backend URL for production
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL (required for real-time updates)
# Use ws:// for development, wss:// for production (HTTPS)
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Application title
NEXT_PUBLIC_APP_NAME=GloryPicks

# Application description
NEXT_PUBLIC_APP_DESCRIPTION=Real-time trading signals with ICT strategies

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable real-time WebSocket updates
NEXT_PUBLIC_ENABLE_WEBSOCKET=true

# Enable/disable demo mode (shows mock data)
NEXT_PUBLIC_DEMO_MODE=false

# Default symbol to load on start
NEXT_PUBLIC_DEFAULT_SYMBOL=AAPL

# Default timeframe (15m, 1h, 1d)
NEXT_PUBLIC_DEFAULT_TIMEFRAME=1h

# ============================================================================
# CHART SETTINGS
# ============================================================================

# Chart height in pixels
NEXT_PUBLIC_CHART_HEIGHT=400

# Enable/disable crosshair on charts
NEXT_PUBLIC_CHART_CROSSHAIR=true

# Chart theme (light, dark)
NEXT_PUBLIC_CHART_THEME=dark

# ============================================================================
# UPDATE INTERVALS
# ============================================================================

# Signal update interval in milliseconds
NEXT_PUBLIC_SIGNAL_UPDATE_INTERVAL=60000

# Price update interval in milliseconds
NEXT_PUBLIC_PRICE_UPDATE_INTERVAL=5000

# ============================================================================
# DEVELOPMENT OPTIONS
# ============================================================================

# Enable debug logging in browser console
NEXT_PUBLIC_DEBUG=false

# Enable React Developer Tools
NEXT_PUBLIC_REACT_DEVTOOLS=false
