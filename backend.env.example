# GloryPicks Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATA PROVIDER API KEYS (REQUIRED FOR LIVE DATA)
# ============================================================================

# Finnhub API Key (REQUIRED for stocks and forex data)
# Get your free API key at: https://finnhub.io/register
# Free tier: 60 API calls/minute
FINNHUB_API_KEY=your_finnhub_api_key_here

# Alpha Vantage API Key (OPTIONAL backup provider)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
# Free tier: 5 API calls/minute
# Leave empty if not using
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# ============================================================================
# PROVIDER CONFIGURATION
# ============================================================================

# Provider priority order (comma-separated, left to right)
# Used for fallback when primary provider fails
PROVIDER_PRIORITY=finnhub,alphavantage,binance

# Default provider to use (must be enabled above)
DEFAULT_PROVIDER=finnhub

# ============================================================================
# CORS SETTINGS
# ============================================================================

# Comma-separated list of allowed origins for API access
# Add your frontend URLs here (for production)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================================================
# SERVER SETTINGS
# ============================================================================

# Server host binding (0.0.0.0 for all interfaces, localhost for local only)
HOST=0.0.0.0

# Server port
PORT=8000

# Logging level (debug, info, warning, error, critical)
# Use 'debug' for development, 'info' for production
LOG_LEVEL=info

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Enable/disable in-memory caching
CACHE_ENABLED=true

# Cache time-to-live in seconds (300 = 5 minutes)
CACHE_TTL_SECONDS=300

# ============================================================================
# WEBSOCKET SETTINGS
# ============================================================================

# Heartbeat interval in seconds (keep connection alive)
WS_HEARTBEAT_INTERVAL=30

# Reconnection delay in seconds (when connection drops)
WS_RECONNECT_DELAY=5
